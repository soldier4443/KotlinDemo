<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="55dp">

  <TextView
    android:id="@+id/course_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    tools:text="동전 금액 맞추기"/>

  <ImageView
    android:id="@+id/beta_icon"
    android:layout_width="48dp"
    android:layout_height="24dp"
    android:layout_centerVertical="true"
    android:layout_margin="8dp"
    android:layout_toEndOf="@+id/course_name"
    android:layout_toRightOf="@+id/course_name"
    android:visibility="invisible"
    tools:visibility="visible"/>

  <TextView
    android:id="@+id/score_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="5dp"
    android:layout_toLeftOf="@+id/go_sign"
    android:layout_toStartOf="@+id/go_sign"
    tools:text="5400점"/>

  <ImageView
    android:id="@+id/go_sign"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="6dp"
    android:layout_marginRight="6dp"/>

</RelativeLayout>